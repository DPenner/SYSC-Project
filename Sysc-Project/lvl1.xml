<?xml version="1.0" encoding="UTF-8"?>
<level>
    <!-- number of steps the level starts with -->
    <timer value="60"/>
    <!-- defines the grid size of the level -->
    <grid width="3" height="4"/>
    <rooms>
	    <!--  each tile within in the room tags make up that room -->
	    <room>
	        <!-- an empty tile -->
	        <tile x="0" y="0"/> 
	        <!--  tile holding an item -->
	        <tile x="0" y="1">
	            <inventory>
	            	<item type="key" name="Red key"/>
	            </inventory>
	        </tile>
	        <tile x="1" y="1"/>
	    </room>
	    <room>
	        <tile x ="0" y ="2">
	            <character type="monster" name="Slime">
	                <iventory>
	                    <item type="health-potion" name="Small Health Potion"/>  
	                </iventory>
	            </character>
	        </tile>
	        <tile x="1" y ="2"/>
	        <tile x="2" y ="2"/>	        
	    </room>
	    <room>
	        <tile x="1" y="1">
	            <inventory>
	            	<item type="code" name="Full Code"/>
	            </inventory>
	        </tile>
	    </room>
	    <room type="elevator">
	        <tile x="0" y="2"/>
	    </room>
	    <room>
	        <tile x="1" y="2">
	            <item type="weapon" name="Rusty Sword"/>
	        </tile>
	        <tile x="1" y="3"/>
	        <tile x="0" y="3"/>
	    </room>
	    <room>
	        <tile x="2" y="3">
	            <iventory>
	            	<character type="monster" name="Slime"/>
	            </iventory>
	        </tile>
	    </room>
	</rooms>
	<exits>
	    <!-- unlocked exit -->
	    <exit>
	    	<tile x="0" y="2"/>
	    	<tile x="0" y="3"/>
	    </exit>
	    <exit>
	        <tile x="1" y="3"/>
	        <tile x="2" y="3"/>    
	    </exit>
	    <exit>
	        <tile x="2" y="3"/>
	        <tile x="2" y="2"/>
	    </exit>
	    <exit>
	        <tile x="1" y="0"/>
	        <tile x="2" y="0"/>
	    </exit>
	    <!-- a locked exit -->
	    <exit type="locked">
	        <key>
	            <item type="key" name="Red key"/>
	        </key>
	        <tile x="1" y="1"/>
	        <tile x="2" y="1"/>
	    </exit>
	</exits>
</level>