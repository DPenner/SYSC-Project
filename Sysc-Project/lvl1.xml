<?xml version="1.0" encoding="UTF-8"?>
<level>
    <!-- number of steps the level starts with -->
    <timer value="60"/>
    <!-- defines the grid size of the level -->
    <grid width="3" height="4"/>
    <rooms>
	    <!--  each tile within in the room tags make up that room -->
	    <room>
	        <!-- an empty tile -->
	        <tile x="0" y="0"/> 
	        <!--  tile holding an item -->
	        <tile x="0" y="1">
	            <item type="item" name="Red key" weight="1"/>
	        </tile>
	        <tile x="1" y="1"/>
	    </room>
	    <room>
	        <tile x ="0" y ="2">
	            <character type="monster" name="Slime">
	             	<attack>10</attack>
	             	<health>20</health>
	            	<item type="item" name="Junk" weight="1"/>  
	            </character>
	        </tile>
	        <tile x="1" y ="2"/>
	        <tile x="2" y ="2"/>	        
	    </room>
	    <room>
	        <tile x="1" y="1">
	            <item type="item" name="Junk" weight="1"/>
	        </tile>
	    </room>
	    <room type="elevator">
	        <tile x="0" y="2"/>
	    </room>
	    <room>
	        <tile x="1" y="2">
	            <item type="weapon" name="Rusty Sword" weight="1"/>
	        </tile>
	        <tile x="1" y="3"/>
	        <tile x="0" y="3"/>
	    </room>
	    <room>
	        <tile x="2" y="3">
	            <character type="monster" name="Slime">
	            	<attack>10</attack>
	             	<health>20</health>
	            </character>
	        </tile>
	    </room>
	</rooms>
	<exits>
	    <!-- unlocked exit -->
	    <exit>
	    	<tile x="0" y="2" direction="south"/>
	    	<tile x="0" y="3" direction="north"/>
	    </exit>
	    <exit>
	        <tile x="1" y="3" direction="west"/>
	        <tile x="2" y="3" direction="east"/>    
	    </exit>
	    <exit>
	        <tile x="2" y="3" direction="north"/>
	        <tile x="2" y="2" direction="south"/>
	    </exit>
	    <exit>
	        <tile x="1" y="0" direction="west"/>
	        <tile x="2" y="0" direction="east"/>
	    </exit>
	    <!-- a locked exit -->
	    <exit type="locked">
	        <item type="item" name="Red key" weight="1"/>
	        <tile x="1" y="1" direction="west"/>
	        <tile x="2" y="1" direction="east"/>
	    </exit>
	</exits>
</level>